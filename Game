        if (e.getSource() == icon) {
            System.out.println("Icons grabbed");
            if (icon.getIcon().equals(b9.getIcon())) {
                System.out.println("Icon to b1's");
                mover = b1.getIcon();
                icon.setIcon(mover);
            } else if (icon.getIcon().equals(b1.getIcon())){
                System.out.println("Icon to b2's");
                mover = b2.getIcon();
                icon.setIcon(mover);
            } else if (icon.getIcon().equals(b2.getIcon())) {
                System.out.println("Icon to b3's");
                mover = b3.getIcon();
                icon.setIcon(mover);
            } else if (icon.getIcon().equals(b3.getIcon())) {
                System.out.println("Icon to b4's");
                mover = b4.getIcon();
                icon.setIcon(mover);
            } else if (icon.getIcon().equals(b4.getIcon())) {
                System.out.println("Icon to b5's");
                mover = b5.getIcon();
                icon.setIcon(mover);
            } else if (icon.getIcon().equals(b5.getIcon())) {
                System.out.println("Icon to b6's");
                mover = b6.getIcon();
                icon.setIcon(mover);
            } else if (icon.getIcon().equals(b6.getIcon())) {
                System.out.println("Icon to b7's");
                mover = b7.getIcon();
                icon.setIcon(mover);
            } else if (icon.getIcon().equals(b7.getIcon())) {
                System.out.println("Icon to b8's");
                mover = b8.getIcon();
                icon.setIcon(mover);
            } else if (icon.getIcon().equals(b8.getIcon())) {
                System.out.println("Icon to b9's");
                mover = b9.getIcon();
                icon.setIcon(mover);
            }
        }

        //Puzzle Buttons
        //first button
        if (e.getSource() == b1) {
            System.out.println("B1 clicked");
            if (b2.getIcon() == mover) {
                System.out.println("B1 touched B2");
                b2.setIcon(b1.getIcon());
                b1.setIcon(mover);
            } else if (b4.getIcon() == mover) {
                System.out.println("B1 touched B4");
                b4.setIcon(b1.getIcon());
                b1.setIcon(mover);
            }
        }
        //second button
        if (e.getSource() == b2) {
            System.out.println("B2 clicked");
            if (b1.getIcon() == mover) {
                System.out.println("B2 touched B1");
                b1.setIcon(b2.getIcon());
                b2.setIcon(mover);
            } else if (b5.getIcon() == mover) {
                System.out.println("B2 touched B5");
                b5.setIcon(b2.getIcon());
                b2.setIcon(mover);
            } else if (b3.getIcon() == mover) {
                System.out.println("B2 touched B3");
                b3.setIcon(b2.getIcon());
                b2.setIcon(mover);
            }
        }
        //third button
        if (e.getSource() == b3) {
            System.out.println("B3 clicked");
            if (b2.getIcon() == mover) {
                System.out.println("B3 touched B2");
                b2.setIcon(b3.getIcon());
                b3.setIcon(mover);
            } else if (b6.getIcon() == mover) {
                System.out.println("B3 touched B6");
                b6.setIcon(b3.getIcon());
                b3.setIcon(mover);
            }
        }
        //fourth button
        if (e.getSource() == b4) {
            System.out.println("B4 clicked");
            if (b1.getIcon() == mover) {
                System.out.println("B4 touched B1");
                b1.setIcon(b4.getIcon());
                b4.setIcon(mover);
            } else if (b5.getIcon() == mover) {
                System.out.println("B4 touched B5");
                b5.setIcon(b4.getIcon());
                b4.setIcon(mover);
            } else if (b7.getIcon() == mover) {
                System.out.println("B4 touched B7");
                b7.setIcon(b4.getIcon());
                b4.setIcon(mover);
            }
        }
        //fifth button
        if (e.getSource() == b5) {
            System.out.println("B5 clicked");
            if (b2.getIcon() == mover) {
                System.out.println("B5 touched b2");
                b2.setIcon(b5.getIcon());
                b5.setIcon(mover);
            } else if (b4.getIcon() == mover) {
                System.out.println("B5 touched B4");
                b4.setIcon(b5.getIcon());
                b5.setIcon(mover);
            } else if (b6.getIcon() == mover) {
                System.out.println("B5 touched B6");
                b6.setIcon(b5.getIcon());
                b5.setIcon(mover);
            } else if (b8.getIcon() == mover) {
                System.out.println("B5 touched B8");
                b8.setIcon(b5.getIcon());
                b5.setIcon(mover);
            }
        }
        //sixth button
        if (e.getSource() == b6) {
            System.out.println("B6 clicked");
            if (b3.getIcon() == mover) {
                System.out.println("B6 touched B3");
                b3.setIcon(b6.getIcon());
                b6.setIcon(mover);
            } else if (b5.getIcon() == mover) {
                System.out.println("B6 touched B5");
                b5.setIcon(b6.getIcon());
                b6.setIcon(mover);
            } else if (b9.getIcon() == mover) {
                System.out.println("B6 touched B9");
                b9.setIcon(b6.getIcon());
                b6.setIcon(mover);
            }
        }
        //seventh button
        if (e.getSource() == b7) {
            System.out.println("B7 clicked");
            if (b4.getIcon() == mover) {
                System.out.println("B7 touched B4");
                b4.setIcon(b7.getIcon());
                b7.setIcon(mover);
            } else if (b8.getIcon() == mover) {
                System.out.println("B7 touched B8");
                b8.setIcon(b7.getIcon());
                b7.setIcon(mover);
            }
        }
        //eighth button
        if (e.getSource() == b8) {
            System.out.println("B8 clicked");
            if (b7.getIcon() == mover) {
                System.out.println("B8 touched B7");
                b7.setIcon(b8.getIcon());
                b8.setIcon(mover);
            } else if (b5.getIcon() == mover) {
                System.out.println("B8 touched B5");
                b5.setIcon(b8.getIcon());
                b8.setIcon(mover);
            } else if (b9.getIcon() == mover) {
                System.out.println("B8 touched B9");
                b9.setIcon(b8.getIcon());
                b8.setIcon(mover);
            }
        }
