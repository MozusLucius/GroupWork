        if (e.getSource() == b9) {
            System.out.println("B9 clicked");
            if (b6.getIcon() == mover) {
                System.out.println("B9 touched B6");
                b6.setIcon(b9.getIcon());
                b9.setIcon(mover);
            } else if (b8.getIcon() == mover) {
                System.out.println("B9 touched B8");
                b8.setIcon(b9.getIcon());
                b9.setIcon(mover);
            }
        }

        //changer button's functions
        if (e.getSource() == changer) {
            System.out.println("Changer clicked");
            Icon ch = changer.getIcon();
            //2nd Image
            if (ch == pics.logo) {
                currentLevel.setText("Level: 2");
                System.out.println("Logo changed to Mansion B");
                changer.setIcon(pics.mB);
                b1.setIcon(pics.mB4);
                b2.setIcon(pics.mB2);
                b3.setIcon(pics.mB6);
                b4.setIcon(pics.mB9);
                b5.setIcon(pics.mB1);
                b6.setIcon(pics.mB5);
                b7.setIcon(pics.mB3);
                b8.setIcon(pics.mB8);
                b9.setIcon(pics.mB7);
                icon.setIcon(b1.getIcon());
                mover = icon.getIcon();
            }
            //3rd Image
            else if (ch == pics.mB) {
                currentLevel.setText("Level: 3");
                System.out.println("Mansion B changed to Mansion A");
                changer.setIcon(pics.mA);
                b1.setIcon(pics.mA2);
                b2.setIcon(pics.mA1);
                b3.setIcon(pics.mA6);
                b4.setIcon(pics.mA9);
                b5.setIcon(pics.mA4);
                b6.setIcon(pics.mA5);
                b7.setIcon(pics.mA8);
                b8.setIcon(pics.mA3);
                b9.setIcon(pics.mA7);
                icon.setIcon(b1.getIcon());
                mover = icon.getIcon();
            }
            //4th Image
            else if (ch == pics.mA) {
                currentLevel.setText("Level: 4");
                System.out.println("Mansion A changed to Person B");
                icon.setIcon(pics.pB1);
                mover = icon.getIcon();
                changer.setIcon(pics.pB);
                b1.setIcon(pics.pB4);
                b2.setIcon(pics.pB7);
                b3.setIcon(pics.pB5);
                b4.setIcon(pics.pB2);
                b5.setIcon(pics.pB3);
                b6.setIcon(pics.pB9);
                b7.setIcon(pics.pB8);
                b8.setIcon(pics.pB6);
                b9.setIcon(pics.pB1);
            }
            //5th Image
            else if (ch == pics.pB) {
                currentLevel.setText("Level: 5");
                System.out.println("Person B changed to Nature B");
                icon.setIcon(pics.nB1);
                mover = icon.getIcon();
                changer.setIcon(pics.nB);
                b1.setIcon(pics.nB9);
                b2.setIcon(pics.nB5);
                b3.setIcon(pics.nB2);
                b4.setIcon(pics.nB1);
                b5.setIcon(pics.nB3);
                b6.setIcon(pics.nB8);
                b7.setIcon(pics.nB6);
                b8.setIcon(pics.nB7);
                b9.setIcon(pics.nB4);
            }
            //back to 1st Image
            else {
                currentLevel.setText("Level: 1");
                System.out.println("Nature B changed to Logo");
                changer.setIcon(pics.logo);
                b1.setIcon(pics.l3);
                b2.setIcon(pics.l4);
                b3.setIcon(pics.l1);
                b4.setIcon(pics.l8);
                b5.setIcon(pics.l2);
                b6.setIcon(pics.l7);
                b7.setIcon(pics.l6);
                b8.setIcon(pics.l9);
                b9.setIcon(pics.l5);
                icon.setIcon(b1.getIcon());
                mover = icon.getIcon();
            }
        }//end of changer
        //Order checker/If puzzle is solved
//        Levels l = new Levels();
//        if (l.level2.getUI().equals(changer.getText())){
//            changer.doClick();
//
//        }


    }
}
