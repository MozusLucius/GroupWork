import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class Game implements ActionListener {

    Pictures pics = new Pictures();
    JButton icon, changer, b1, b2, b3, b4, b5, b6, b7, b8, b9, pause;
    //JLabel int here for timer
    JLabel timer, currentLevel;
    Icon mover;

    Game() {
        currentLevel = new JLabel("Level: 1");
        currentLevel.setFont(new Font("Georgia", Font.BOLD, 45));
        currentLevel.setForeground(Color.BLACK);
        timer = new JLabel("00:00");
        timer.setFont(new Font("Lucida Console", Font.BOLD, 30));
        timer.setBackground(Color.BLACK);
        pause = new JButton("PAUSE");
        pause.setFont(new Font("Arial", Font.BOLD, 18));
        pause.setFocusable(false);
        pause.setBackground(new Color(0xfcacac));

        b1 = new JButton(); b2 = new JButton(); b3 = new JButton();
        b4 = new JButton(); b5 = new JButton(); b6 = new JButton();
        b7 = new JButton(); b8 = new JButton(); b9 = new JButton();
        b1.setIcon(pics.l3); b2.setIcon(pics.l4); b3.setIcon(pics.l1);
        b4.setIcon(pics.l8); b5.setIcon(pics.l2); b6.setIcon(pics.l7);
        b7.setIcon(pics.l6); b8.setIcon(pics.l9); b9.setIcon(pics.l5);

        mover = b1.getIcon();
        icon = new JButton();
        icon.setIcon(b1.getIcon());
        changer = new JButton();
        changer.setIcon(pics.logo);

        b1.addActionListener(this); b2.addActionListener(this); b3.addActionListener(this);
        b4.addActionListener(this); b5.addActionListener(this); b6.addActionListener(this);
        b7.addActionListener(this); b8.addActionListener(this); b9.addActionListener(this);
        icon.addActionListener(this);
        changer.addActionListener(this);

    }

    /*
        1. All button's functions
            A. icon button functions
            B. Puzzle Buttons
            C. changer button functions
        */
